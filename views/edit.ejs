<%layout("./layouts/boilerplate") %>
<body>
        <div class="row">
            <div class="col-8 offset-2">
                <h2>Create A New Listing</h2>
                <form action="/listings/<%=list._id%>/y" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="listing[title]" class="form-label">Title</label>
                        <input name="listing[title]" id="title" class="form-control" value="<%=list.title%>" placeholder="enter title" type="text" required>
                        <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Kya bc </div>
                    </div>
            
                    <div class="mb-3">
                        <label for="listing[description]" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description" class="form-control" placeholder="enter description" required><%=list.description%></textarea>
                        <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Kya bc </div>
                    </div>
                    
                    <div class="mb-3">
                        <img src="<%= oi %>" alt="">
                    </div>

                    <div class="mb-3">
                        <label for="listing[image]" class="form-label">Upload Listing Image</label>
                        <input name="listing[image]" type="file" id="listing[image]" class="form-control" required>  
                        <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Kya bc </div>
                    </div>
                    
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="listing[price]" class="form-label">Price</label>
                            <input name="listing[price]" id="price" class="form-control" value="<%=list.price%>" placeholder="enter price"  required>
                            <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Kya bc </div>
                        </div>
                        
                        <div class="mb-3 col-md-8">
                            <label for="listing[location]" class="form-label">Location</label>
                            <input name="listing[location]" id="location"  value="<%=list.location%>" placeholder="enter title" class="form-control" required>
                            <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Kya bc </div>
                        </div>
                    </div>
                   
                    <div class="mb-3">
                        <label for="listing[country]" class="form-label">Country</label>
                        <input name="listing[country]" id="country" class="form-control"  value="<%=list.country%>" placeholder="enter country" required>
                        <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Kya bc </div>
                    </div>
                    <br><br>
                    <button class="btn btn-dark">Submit</button>
                </form>
            </div>
        </div>
</body>